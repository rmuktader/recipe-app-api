  "version": "0.2.0",
  "configurations": [
    {
      // requires vscode extension: ms-python.python
      "name": "docker: runserver",
      "type": "python",
      "request": "attach",
      "pathMappings": [
          {
              "localRoot": "${workspaceFolder}",
              "remoteRoot": "/code"
          }
      ],
      "port": 3000,
      "host": "localhost",
      "preLaunchTask": "start_container",
      // "postDebugTask": "stop_container",
      "django": true
    },
  ]
}